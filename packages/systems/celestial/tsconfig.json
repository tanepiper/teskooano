{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@teskooano/core-state": ["../../core/state/src"],
      "@teskooano/data-types": ["../../data/types/src"],
      "@teskooano/renderer-threejs-core": ["../../renderer/threejs-core/src"],
      "@teskooano/renderer-threejs-lod": ["../../renderer/threejs-lod/src"],
      "@teskooano/renderer-threejs-objects": [
        "../../renderer/threejs-objects/src"
      ]
    },
    "noEmit": false
  },
  "references": [
    { "path": "../../core/state" },
    { "path": "../../data/types" },
    { "path": "../../renderer/threejs-core" },
    { "path": "../../renderer/threejs-lod" },
    { "path": "../../renderer/threejs-objects" }
  ],
  "include": ["src/**/*", "src/shims-glsl.d.ts"],
  "exclude": ["node_modules", "dist"]
}
